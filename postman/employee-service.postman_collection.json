{
  "info": {
    "_postman_id": "employee-service",
    "name": "Employee Service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication (dev)",
      "item": [
        {
          "name": "Issue dev token",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subject\": \"local-user\",\n  \"scopes\": [\"employee.read\", \"employee.write\"],\n  \"expiresInMinutes\": 60\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/token",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "token"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Employees",
      "item": [
        {
          "name": "List employees",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/employees",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "employees"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get employee by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/employees/{{employeeId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "employees",
                "{{employeeId}}"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Search employees",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/employees/search?name=ana",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "employees",
                "search"
              ],
              "query": [
                {
                  "key": "name",
                  "value": "ana"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create employee (single)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Ana\",\n  \"middleName\": \"Maria\",\n  \"lastName\": \"Ruiz\",\n  \"secondLastName\": \"Lopez\",\n  \"age\": 30,\n  \"sex\": \"F\",\n  \"birthDate\": \"10-02-1994\",\n  \"position\": \"Engineer\",\n  \"active\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/employees",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "employees"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create employees (batch)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "[\n  {\n    \"firstName\": \"Ana\",\n    \"lastName\": \"Ruiz\",\n    \"age\": 30,\n    \"sex\": \"F\",\n    \"birthDate\": \"10-02-1994\",\n    \"position\": \"Engineer\",\n    \"active\": true\n  },\n  {\n    \"firstName\": \"Luis\",\n    \"lastName\": \"Gomez\",\n    \"age\": 35,\n    \"sex\": \"M\",\n    \"birthDate\": \"12-08-1989\",\n    \"position\": \"Manager\",\n    \"active\": true\n  }\n]"
            },
            "url": {
              "raw": "{{baseUrl}}/employees",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "employees"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update employee",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Ana\",\n  \"position\": \"Senior Engineer\",\n  \"active\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/employees/{{employeeId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "employees",
                "{{employeeId}}"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete employee",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/employees/{{employeeId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "employees",
                "{{employeeId}}"
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "employeeId",
      "value": "1"
    }
  ]
}
